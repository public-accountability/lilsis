<div class="row">
  <div class="col-sm-12"
    <h1>Flag for Review</h1>
  </div>
</div>

<%= render partial: 'contact_header' %>

<div class="row">
  <%= form_tag '/flag', method: 'post', class: 'w-100' do %>
    
    <div class="col-sm-12"
      <p>Please contact us regarding problems or inaccuracies at the following URL:</p>
    </div>
    
    <div class="form-group">
      <label class="col-sm-2 control-label">Url</label>
      <% if @referrer.blank? %>
	<div class="col-sm-8">
          <%= text_field_tag(:url, nil, required: true) %>
	</div>
      <% else %>
	<div class="col-sm-6">
          <p class="form-control-static"><%= @referrer %></p>
	  <%= hidden_field_tag 'url', @referrer  %>
	</div>
      <% end %>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Email:*</label>
      <div class="col-sm-8">
	<%= email_field_tag(:email, nil, reuqired: true) %>
      </div>
    </div>

    <div class="form-group">
      <label class="col-sm-2 control-label">Message*</label>
      <div class="col-sm-8">
	<%= text_area_tag 'message', nil, size: '25x5' %>
      </div>
    </div>

    <div class="form-group top-3em">
      <div class="col-sm-10 col-sm-offset-2">
        <%= submit_tag("submit", class: 'btn btn-primary') %>
      </div>
    </div>
  <% end %>
</div>
